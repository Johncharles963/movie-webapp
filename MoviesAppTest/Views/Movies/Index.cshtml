@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="row">
    <h1 class="text-center mb-5 display-2">Movie List</h1>
</div>

<div class="row">
@foreach(var item in Model)
    {

        <div class="row pt-5 pb-5 mx-auto" style="background-color: #EEEEEE; border-radius: 10px;">
            <div class="mx-auto col-12 col-lg-5" style="max-height:400px;">
                @if(item.ImgUrl != null)
                {
                    <img src="@item.ImgUrl" class="d-block mx-auto me-lg-5" style="border-radius: 15px; width :60%; height: 100%; object-fit: contain;"/>
                }
                else
                {
                    <img class="d-block mx-auto me-lg-5" style="background-color: blue; width :60%; height: 100%; object-fit: contain;"/>    
                }
                          
             </div>  
             <div class="col-12 col-lg-7  text-sm mt-4 mt-lg-0">
                <div>
                <h2 class="" style="">@item.name</h2>
                <p class="my-lg-3"><b>Suggested By:</b> Dave ward</p>
                <p class="my-lg-3"><b>Director:</b> @item.Director</p>
                <p><b>Rated:</b> @item.Rating</p>
                <p class="mx-auto width-sm">@item.Description</p>
                <p><b>Genre:</b> Action/Thriller &nbsp; &nbsp; <b>Rating:</b> &nbsp;10/10</p>
               </div>
                <div>
                <a class="btn dark-pink">Write a review</a>
                <a class="btn ms-3 dark-pink"> View Reviews </a>  
                </div>
                <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn dark-pink">Edit</a>
                <a asp-action="Delete"  asp-route-id="@item.Id" class="btn ms-3 dark-pink"> Delete </a>  
                </div>
            </div>
            </div>
            <div class="my-5 mx-auto" style="height:30px; border-bottom: 1px solid #00aa84; width:85%"></div>
            
    }
</div>
<div class="text-end">
    <a asp-controller="Movies" asp-action="Create" class="btn-primary btn">Create New</a>
</div>
